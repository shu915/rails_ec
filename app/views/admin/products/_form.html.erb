<%= form_with model: [:admin, @product],  class: 'p-admin-new__form mb-5' do |f| %>
  <div class="from-group mt-3">
    <%= f.label :name, '商品名' %>
    <span class="p-admin-new_from-require">必須</span>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= f.label :description, '商品詳細' %>
    <span class="p-admin-new_from-require">必須</span>
    <%= f.text_area :description, class: 'form-control',rows: 5 %>
  </div>
  <div class="form-group mt-3">
    <%= f.label :price, '値段' %>
    <span class="p-admin-new_from-require">必須</span>
    <%= f.text_field :price, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= f.label :discouted_price, '割引後の値段' %>
    <%= f.text_field :discouted_price, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= f.label :sku, 'SKU' %>
    <span class="p-admin-new_from-require">必須</span>
    <%= f.text_field :sku, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= f.label :image, '商品画像' %>
    <%= f.file_field :image, class: 'form-control' %>
  </div>
  <div class="form-group mt-3">
    <%= f.submit nil, class: 'btn btn-dark' %>
  </div>
<% end %>
